<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= @book.errors.count %>件のエラーが発生しました
    </h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<body>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1>Editing Book</h1>
        <%= form_for @book do |f| %>
          <div>
            <label>Title</label>
            <%= f.text_field :title %>
          </div>
          <div>
            <label>Opinion</label>
            <%= f.text_field :body %>
          </div>
          <div>
            <%= f.submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</body>