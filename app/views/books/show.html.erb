
<%= render 'users/list', book: @new_book, current_user: @book.user %>

<div class="col-xs-9">
  <h2>Book detail</h2>
      <table class="table">
        <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user_id) do %>
                  <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                <%= @book.title %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <% if @book.user == current_user %>
                <td>
                  <%= link_to "Edit", edit_book_path(@book.id) %>
                </td>
                <td>
                  <%= link_to "Destroy", "/books/#{@book.id}", method: :delete %>
                </td>
              <% end %>
            </tr>
        </tbody>      
      </table>
</div>