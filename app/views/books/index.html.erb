<body>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= @book.errors.count %>件のエラーが発生しました
    </h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
      <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <%= link_to "wrench", edit_user_path(current_user) %>
      </div>
      <h2>New book</h2>
      <%= form_for(@book, url: '/books') do |f| %>
        <div>
          <label>Title</label>
          <%= f.text_field :title %>
        </div>
        <div>
          <label>Opinion</label>
          <%= f.text_area :body %>
        </div>
        <div>
          <%= f.submit 'Create Book' %>
        </div>
      <% end %>
    </div>

    <div class="col-xs-9">
      <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= attachment_image_tag book.user.name, :profile_image, fallback: "no_image.jpg" %>
              </td>
              <td>
                <%= link_to book.title, book_path(params[:id]) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          <% end %>
        </tbody>      
      </table>
    </div>

  </div>
</div>
</body>