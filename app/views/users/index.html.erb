<body>
 <div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
      <a>写真</a>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.email %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to "wrench", edit_user_path(current_user) %>
      </div>
      <h2>New book</h2>
      <%= form_for(@book) do |f| %>
        <div>
          <label>Title</label>
          <%= f.text_field :title %>
        </div>
        <div>
          <label>Opinion</label>
          <%= f.text_area :body %>
        </div>
        <div>
          <%= f.submit 'Create Book' %>
        </div>
      <% end %>
    </div>

    <div class="col-xs-9">
      <h2>Users</h2>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>

              </td>
              <td>
                <%= book.user %>
              </td>
              <td>
                <%= link_to "Show", user_path(book.id) %>
              </td>
            </tr>
          <% end %>
        </tbody>      
      </table>
    </div>

  </div>
 </div>
</body>