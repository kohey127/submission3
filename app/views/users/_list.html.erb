<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
      <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <%= link_to "wrench", edit_user_path(current_user) %>
      </div>
      <h2>New book</h2>
      <%= form_for(book) do |f| %>
        <div>
          <label>Title</label>
          <%= f.text_field :title %>
        </div>
        <div>
          <label>Opinion</label>
          <%= f.text_area :body %>
        </div>
        <div>
          <%= f.submit 'Create Book' %>
        </div>
      <% end %>
    </div>
