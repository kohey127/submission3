<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
      <div class="profile_img">
        <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
      </div>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="wrench">
        <%= link_to edit_user_path(current_user) do %>
          <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
        <% end %>
      </div>
      <h2>New book</h2>
      <%= form_for(book) do |f| %>
        <div>
          <%= f.label :name, "Title" %><br>
          <%= f.text_field :title %>
        </div>
        <div>
          <%= f.label :body, "Opinion" %><br>
          <%= f.text_area :body %>
        </div>
        <div>
          <%= f.submit 'Create Book', class: "btn" %>
        </div>
      <% end %>
    </div>
